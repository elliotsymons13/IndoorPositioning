<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FingerprintingMenuActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_fingerprintingMenuExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fingerprintingMenuExplanation" />

        <Button
            android:id="@+id/btn_gridMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gridMethodSelected"
            android:text="Grid Method" />

        <Button
            android:id="@+id/btn_placementMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="placementMethodSelected"
            android:text="Placement method" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>